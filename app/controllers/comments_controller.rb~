class CommentsController < ApplicationController
  def create
  @micropost = Micropost.find(params[:micropost_id])
  @comment = @micropost.comments.build(params[:comment])
  @comment.save
redirect_to @micropost
  end

  def edit
  @micropost = Micropost.find(params[:micropost_id])
  @comment.rating = @comment.rating +1
  @comment.save
  end


  def destroy
  end

end
