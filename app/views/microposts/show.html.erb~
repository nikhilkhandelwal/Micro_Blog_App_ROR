	<p><%= f.text_area :text, :size => '40x10' %></p>
	<p><%= f.hidden_field :user_id, :value => current_user.id %></p>
	<p><%= f.hidden_field :rating, :value => '0' %></p>
	<p><%= f.submit "post comment" %></p>
<% end %>

  

